<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="482dp"
    android:layout_marginTop="1dp"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!--    间隔线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF" />
    <!--    小学-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <!--        年级-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade1"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="一年级"
                    android:textColor="@color/word" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade2"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="二年级"
                    android:textColor="@color/word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade3"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="三年级"
                    android:textColor="@color/word" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade4"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="四年级"
                    android:textColor="@color/word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade5"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="五年级"
                    android:textColor="@color/word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade6"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="六年级"
                    android:textColor="@color/word" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade7"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="七年级"
                    android:textColor="@color/word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade8"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="八年级"
                    android:textColor="@color/word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade9"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="九年级"
                    android:textColor="@color/word" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade10"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="高一"
                    android:textColor="@color/word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade11"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="高二"
                    android:textColor="@color/word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/grade12"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#105C5C5C"
                    android:text="高三"
                    android:textColor="@color/word" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--        确定-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/sure_grade_select"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:layout_marginLeft="58dp"
            android:text="确 定"
            android:textColor="@color/word" />
    </LinearLayout>
</LinearLayout>