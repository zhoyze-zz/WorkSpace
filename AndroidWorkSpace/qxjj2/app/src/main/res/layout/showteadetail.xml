<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#E8E8E8">
  <!--显示要查找老师的具体信息  -->
  <LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="51dp"
	  android:background="#11cd6e"
	  android:orientation="horizontal">
	  <!--返回箭头  -->
	  <ImageView
	      android:layout_width="0dp"
	      android:layout_weight="0.5"
	      android:layout_height="30dp"
	      android:layout_marginTop="10dp"
	      android:contentDescription="@string/app_name"
	      android:src="@drawable/arrowleft" />
	  <!--科目文字  -->
	  <LinearLayout
	      android:layout_width="0dp"
		  android:layout_weight="5"
	      android:layout_height="50dp"
	      android:orientation="vertical">
		 <TextView
			  android:layout_width="wrap_content"
			  android:layout_gravity="left"
			  android:layout_marginLeft="10dp"
		      android:layout_height="wrap_content"
		      android:textSize="20sp"
		      android:textColor="#FFFFFF"
		      android:layout_marginTop="12dp"
		      android:text="个人信息"/>
		 </LinearLayout>
  </LinearLayout>	  
  <!--间隔线  -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CFCFCF" />
  <!--头像  -->
  <LinearLayout
      android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:background="#FFFFFF"
	  android:layout_height="50dp">
	  <LinearLayout 
	      android:orientation="horizontal"
	      android:layout_width="match_parent"
	      android:layout_marginLeft="10dp"
	      android:layout_height="wrap_content">
	   <TextView
	       android:layout_width="0dp"
	       android:layout_weight="4"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"
	       android:text="头像" />
	   <ImageView 
	       android:id="@+id/det_icon"
	       android:layout_width="0dp"
	       android:layout_weight="1"
	       android:layout_height="45dp"
	       android:layout_marginTop="2dp"
	       android:layout_marginRight="5dp"
	       android:layout_gravity="center_vertical"
	       android:background="@drawable/hugh"/>  
	  </LinearLayout>  
  </LinearLayout>
  <!--间隔线  -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CFCFCF" />
  <!--性别 -->
  <LinearLayout
      android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:background="#FFFFFF"
	  android:layout_marginTop="15dp"
	  android:layout_height="45dp">
	  <LinearLayout 
	      android:orientation="horizontal"
	      android:layout_width="match_parent"
	      android:layout_marginLeft="10dp"
	      android:layout_height="45dp">
	   <TextView
	       android:layout_width="0dp"
	       android:layout_weight="5"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"
	       android:text="性别" />
	   <TextView
	       android:id="@+id/det_sex"
	       android:layout_width="0dp"
	       android:layout_weight="1"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"/>   
	  </LinearLayout>  
  </LinearLayout>
  <!--间隔线  -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CFCFCF" />
  <!--姓名 -->
  <LinearLayout
      android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:background="#FFFFFF"
	  android:layout_height="45dp">
	  <LinearLayout 
	      android:orientation="horizontal"
	      android:layout_width="match_parent"
	      android:layout_marginLeft="10dp"
	      android:layout_height="45dp">
	   <TextView
	       android:layout_width="0dp"
	       android:layout_weight="4.5"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"
	       android:text="姓名" />
	   <TextView
	       android:id="@+id/det_name"
	       android:layout_width="0dp"
	       android:layout_weight="1"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"/>   
	  </LinearLayout>  
  </LinearLayout>
  <!--间隔线  -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CFCFCF" />
    <!--手机号 -->
  <LinearLayout
      android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:background="#FFFFFF"
	  android:layout_marginTop="10dp"
	  android:layout_height="45dp">
	  <LinearLayout 
	      android:orientation="horizontal"
	      android:layout_width="match_parent"
	      android:layout_marginLeft="10dp"
	      android:layout_height="45dp">
	   <TextView
	       android:layout_width="0dp"
	       android:layout_weight="4"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"
	       android:text="手机号" />
	   <TextView
	       android:id="@+id/det_phonum"
	       android:layout_width="0dp"
	       android:layout_weight="1.5"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"/>   
	  </LinearLayout>  
  </LinearLayout>
  <!--间隔线  -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CFCFCF" />

    <!--地址 -->
  <LinearLayout
      android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:background="#FFFFFF"
	  android:layout_height="45dp">
	  <LinearLayout 
	      android:orientation="horizontal"
	      android:layout_width="match_parent"
	      android:layout_marginLeft="10dp"
	      android:layout_height="35dp">
	   <TextView
	       android:layout_width="0dp"
	       android:layout_weight="4"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"
	       android:text="地址" />
	   <TextView
	       android:id="@+id/det_address"
	       android:layout_width="0dp"
	       android:layout_weight="1"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"/>   
	  </LinearLayout>  
  </LinearLayout>
  <!--间隔线  -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CFCFCF" /> 
      
   <!--科目-->
  <LinearLayout
      android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:background="#FFFFFF"
	  android:layout_height="45dp">
	  <LinearLayout 
	      android:orientation="horizontal"
	      android:layout_width="match_parent"
	      android:layout_marginLeft="10dp"
	      android:layout_height="45dp">
	   <TextView
	       android:layout_width="0dp"
	       android:layout_weight="4.3"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"
	       android:text="科目" />
	   <TextView
	       android:id="@+id/det_subject"
	       android:layout_width="0dp"
	       android:layout_weight="1"
	       android:layout_gravity="center_vertical"
	       android:layout_height="wrap_content"/>   
	  </LinearLayout>  
  </LinearLayout>
  <!--间隔线  -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#CFCFCF" />
  <EditText
      android:enabled="false"
      android:id="@+id/det_exper"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:scrollbars="vertical"
      android:minLines="3"
      android:maxLines="5"
      android:background="@drawable/teach_exper"/>
    <LinearLayout
      android:orientation="vertical"
      android:layout_marginTop="30dp"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content">
  	  <Button 
  	      android:id="@+id/det_order"
  	      android:layout_width="330dp"
  	      android:layout_height="40dp"
  	      android:textColor="#FFFFFF"
  	      android:text="预 约 教 师"
  	      android:background="#11cd6e"
  	      android:layout_gravity="center"/>
  </LinearLayout>
</LinearLayout>
